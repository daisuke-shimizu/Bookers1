

<h2>Books</h2>

     <table>
        <tr>
        <th>本のタイトル</th>
        <th>本の感想</th>
        </tr>
        <% @opinions.each do |opinion| %>
        <tr>
        <td><%= opinion.title %></td>
        <td><%= opinion.body %></td>
        <td><%= link_to "Show", opinion_path(opinion) %></td>
        <td><%= link_to "Edit", edit_opinion_path(opinion) %></td>
        <td><%= link_to "Destroy", opinion_path(opinion), method: :delete %></td>
        </tr>
         <% end %>
     </table>
        


<h2>New Book</h2>
<%= form_for(@opinion) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit '投稿' %>
 
<% end %>


      

